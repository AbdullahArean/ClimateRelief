<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_bg">

        <TextView
            android:id="@+id/claimer_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MT"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/ClaimerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rlImage"
        app:layout_constraintBottom_toTopOf="@id/ClaimerDistrict"
        android:text="ClaimerName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/ClaimerDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ClaimerPhone"
        app:layout_constraintStart_toEndOf="@id/rlImage"
        app:layout_constraintTop_toBottomOf="@id/ClaimerName"
        android:text="ClaimerDistrict"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/ClaimerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/rlImage"
        app:layout_constraintTop_toBottomOf="@id/ClaimerDistrict"
        android:text="ClaimerPhone"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        android:layout_marginStart="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>